<% layout('layouts/boilerplate')  %> 


<div class="col-6 offset-3" >
    <h1>New User</h1>
    <form action="/register" method="POST" novalidate class="validated-form">
        <label class="form-label" for="email"></label>
        <input class="form-control mb-3" type="email" name="email" placeholder="email" value="@" required > 
        <div class="valid-feedback">
          Looks good!
        </div>

        <label class="form-label" for="username"></label>
        <input class="form-control mb-3" type="text" name="username" placeholder="username" required > 
        <div class="valid-feedback">
          Looks good!
        </div>

        <label class="form-label" for="password"></label>
        <input class="form-control mb-3" type="password" name="password" placeholder="password" required > 
        <div class="valid-feedback">
          Looks good!
        </div>
        <button class="btn btn-success">Register</button>
    </form>
    


